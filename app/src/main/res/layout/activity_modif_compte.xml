<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/modifName"
            style="@style/modif_compte"

            />

        <EditText
            android:id="@+id/modifForname"
            style="@style/modif_compte"

            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/modifMail"

            style="@style/modif_compte"
            android:layout_marginTop="20dp" />

        <EditText
            android:id="@+id/modifAddress"
            style="@style/modif_compte"

            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/modifZip"
            style="@style/modif_compte"

            android:layout_marginTop="20dp" />

        <EditText
            android:id="@+id/modifCity"
            style="@style/modif_compte"

            android:layout_marginTop="20dp"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:id="@+id/buttonModif"
            android:text="@string/save_modifications"
            />
    </LinearLayout>

</LinearLayout>